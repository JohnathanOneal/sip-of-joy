---
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<!-- Hand-drawn squiggle divider -->
<svg
  class={className}
  viewBox="0 0 200 20"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  preserveAspectRatio="none"
>
  <path
    d="M0 10 C20 5, 30 15, 50 10 C70 5, 80 15, 100 10 C120 5, 130 15, 150 10 C170 5, 180 15, 200 10"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    fill="none"
  />
</svg>
