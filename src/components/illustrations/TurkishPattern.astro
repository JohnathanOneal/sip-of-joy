---
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<!-- Turkish-inspired geometric pattern -->
<svg
  class={className}
  viewBox="0 0 100 100"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
>
  <!-- Central medallion -->
  <circle cx="50" cy="50" r="45" stroke="currentColor" stroke-width="1" opacity="0.3" />
  <circle cx="50" cy="50" r="35" stroke="currentColor" stroke-width="1" opacity="0.4" />
  <circle cx="50" cy="50" r="25" stroke="currentColor" stroke-width="1" opacity="0.5" />

  <!-- 8-pointed star inner -->
  <path
    d="M50 20 L55 45 L80 50 L55 55 L50 80 L45 55 L20 50 L45 45 Z"
    stroke="currentColor"
    stroke-width="1.5"
    fill="none"
    opacity="0.4"
  />

  <!-- Rotated square -->
  <rect
    x="30"
    y="30"
    width="40"
    height="40"
    transform="rotate(45 50 50)"
    stroke="currentColor"
    stroke-width="1"
    fill="none"
    opacity="0.3"
  />

  <!-- Corner flourishes -->
  <path d="M15 15 Q25 20, 20 30" stroke="currentColor" stroke-width="1" fill="none" opacity="0.3" />
  <path d="M85 15 Q75 20, 80 30" stroke="currentColor" stroke-width="1" fill="none" opacity="0.3" />
  <path d="M15 85 Q25 80, 20 70" stroke="currentColor" stroke-width="1" fill="none" opacity="0.3" />
  <path d="M85 85 Q75 80, 80 70" stroke="currentColor" stroke-width="1" fill="none" opacity="0.3" />
</svg>
