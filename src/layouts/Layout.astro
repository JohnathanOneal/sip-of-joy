---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Sip of Joy - TÃ¼rkiye-inspired Cafe & Bakery in Boston. Specialty coffee, handcrafted pastries, and warm hospitality." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
