---
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import CoffeeCup from '../components/illustrations/CoffeeCup.astro';
import Leaf from '../components/illustrations/Leaf.astro';
import Squiggle from '../components/illustrations/Squiggle.astro';
import TurkishPattern from '../components/illustrations/TurkishPattern.astro';
---

<Layout title="Visit" description="Visit Sip of Joy at 661 Tremont Street in Boston's South End. View our hours, get directions, and connect with us.">
  <Nav />

  <main>
    <!-- Hero -->
    <section class="relative py-14 md:py-28 overflow-hidden texture-grain">
      <div class="absolute inset-0 bg-gradient-to-br from-cream via-warm-white to-cream"></div>

      <!-- Decorative elements -->
      <TurkishPattern class="absolute top-10 right-[5%] w-32 h-32 text-cinnamon/10 animate-rotate-slow hidden lg:block" />
      <Leaf class="absolute bottom-10 left-[8%] w-16 h-24 text-sage/30 animate-float-delayed hidden md:block" />

      <div class="relative z-10 max-w-4xl mx-auto px-6 text-center">
        <p class="handwritten text-2xl md:text-4xl text-cinnamon mb-3 md:mb-4 animate-fade-up">
          Come visit
        </p>
        <h1 class="font-display text-4xl md:text-6xl lg:text-7xl font-bold text-espresso mb-4 md:mb-6 animate-fade-up delay-100">
          Find Us
        </h1>
        <Squiggle class="w-32 md:w-48 h-4 mx-auto text-cinnamon/40 animate-fade-in delay-200" />
      </div>
    </section>

    <!-- Main Content -->
    <section class="py-8 md:py-24 bg-warm-white">
      <div class="max-w-6xl mx-auto px-4 md:px-6">
        <div class="grid lg:grid-cols-2 gap-6 lg:gap-16">

          <!-- Left: Info Cards -->
          <div class="space-y-3 md:space-y-8">
            <!-- Top row: Address + Contact side by side on mobile -->
            <div class="grid grid-cols-2 md:grid-cols-1 gap-3 md:gap-8">
              <!-- Address Card -->
              <div class="bg-cream p-4 md:p-8 rounded-xl md:rounded-3xl">
                <div class="md:flex md:items-start md:gap-4">
                  <div class="w-9 h-9 md:w-12 md:h-12 bg-cinnamon/10 rounded-full flex items-center justify-center flex-shrink-0 mb-2 md:mb-0">
                    <svg class="w-4 h-4 md:w-6 md:h-6 text-cinnamon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-display text-base md:text-xl font-semibold text-espresso mb-1 md:mb-2">Address</h3>
                    <p class="text-mocha/80 text-sm md:text-lg">661 Tremont Street</p>
                    <p class="text-mocha/80 text-sm md:text-lg mb-2 md:mb-4">Boston, MA 02118</p>
                    <p class="text-mocha/60 text-xs md:text-sm hidden md:block">Located in the heart of the South End, near Back Bay station.</p>
                  </div>
                </div>
              </div>

              <!-- Contact Card -->
              <div class="bg-cream p-4 md:p-8 rounded-xl md:rounded-3xl">
                <div class="md:flex md:items-start md:gap-4">
                  <div class="w-9 h-9 md:w-12 md:h-12 bg-cinnamon/10 rounded-full flex items-center justify-center flex-shrink-0 mb-2 md:mb-0">
                    <svg class="w-4 h-4 md:w-6 md:h-6 text-cinnamon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-display text-base md:text-xl font-semibold text-espresso mb-1 md:mb-2">Get in Touch</h3>
                    <a href="mailto:hello@sipofjoycafe.com" class="text-cinnamon hover:text-mocha transition-colors text-sm md:text-lg block mb-2 md:mb-4 break-all">
                      hello@sipofjoycafe.com
                    </a>
                    <a
                      href="https://www.instagram.com/Sipofjoy_cafe"
                      target="_blank"
                      rel="noopener noreferrer"
                      class="inline-flex items-center gap-1.5 md:gap-2 text-mocha/80 hover:text-cinnamon transition-colors text-sm md:text-base"
                    >
                      <svg class="w-4 h-4 md:w-5 md:h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                      </svg>
                      @Sipofjoy_cafe
                    </a>
                  </div>
                </div>
              </div>
            </div>

            <!-- Hours Card - full width -->
            <div class="bg-espresso text-cream p-4 md:p-8 rounded-xl md:rounded-3xl relative overflow-hidden">
              <TurkishPattern class="absolute top-0 right-0 w-32 h-32 text-cream/5" />
              <div class="md:flex md:items-start md:gap-4 relative z-10">
                <div class="w-9 h-9 md:w-12 md:h-12 bg-cinnamon/20 rounded-full flex items-center justify-center flex-shrink-0 mb-2 md:mb-0">
                  <svg class="w-4 h-4 md:w-6 md:h-6 text-cinnamon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div class="flex-1">
                  <h3 class="font-display text-base md:text-xl font-semibold mb-2 md:mb-4">Hours</h3>
                  <div class="space-y-2 md:space-y-3 text-sm md:text-base">
                    <div class="flex justify-between">
                      <span class="text-cream/80">Monday - Friday</span>
                      <span class="font-medium">6 AM - 5 PM</span>
                    </div>
                    <div class="flex justify-between">
                      <span class="text-cream/80">Saturday - Sunday</span>
                      <span class="font-medium">8 AM - 5 PM</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Directions Button -->
            <a
              href="https://www.google.com/maps/dir/?api=1&destination=661+Tremont+Street+Boston+MA"
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center justify-center gap-2 md:gap-3 bg-cinnamon hover:bg-mocha text-white px-6 md:px-8 py-3 md:py-4 rounded-full font-medium transition-all duration-300 text-sm md:text-lg hover:scale-105 w-full"
            >
              <svg class="w-4 h-4 md:w-5 md:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
              </svg>
              Get Directions
            </a>
          </div>

          <!-- Right: Map -->
          <div class="relative">
            <div class="aspect-[4/3] md:aspect-square lg:aspect-auto lg:h-full min-h-[220px] md:min-h-[400px] rounded-xl md:rounded-3xl overflow-hidden shadow-xl">
              <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2949.0876!2d-71.0739!3d42.3425!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89e37a0f4d6c4c4f%3A0x0!2s661%20Tremont%20St%2C%20Boston%2C%20MA%2002118!5e0!3m2!1sen!2sus!4v1700000000000!5m2!1sen!2sus"
                width="100%"
                height="100%"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
                title="Sip of Joy location map"
                class="w-full h-full"
              ></iframe>
            </div>
            <!-- Decorative frame -->
            <div class="absolute -bottom-4 -right-4 w-full h-full border-2 border-cinnamon/20 rounded-3xl -z-10 hidden lg:block"></div>
          </div>

        </div>
      </div>
    </section>

    <!-- Parking & Transit Info -->
    <section class="py-8 md:py-16 bg-cream">
      <div class="max-w-4xl mx-auto px-4 md:px-6">
        <div class="text-center mb-6 md:mb-10">
          <p class="handwritten text-xl md:text-2xl text-cinnamon mb-1 md:mb-2">Getting Here</p>
          <h2 class="font-display text-2xl md:text-3xl font-bold text-espresso">Parking & Transit</h2>
        </div>

        <div class="grid grid-cols-2 gap-3 md:gap-6">
          <div class="bg-warm-white p-4 md:p-6 rounded-xl md:rounded-2xl">
            <h3 class="font-display text-base md:text-lg font-semibold text-espresso mb-1 md:mb-2">By Car</h3>
            <p class="text-mocha/70 text-sm md:text-base">Street parking available on Tremont Street and surrounding side streets. Metered parking in the area.</p>
          </div>
          <div class="bg-warm-white p-4 md:p-6 rounded-xl md:rounded-2xl">
            <h3 class="font-display text-base md:text-lg font-semibold text-espresso mb-1 md:mb-2">By Transit</h3>
            <p class="text-mocha/70 text-sm md:text-base">Take the Orange Line to Mass Ave station, then a short walk down Tremont Street. Also accessible from Back Bay station.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Photo Strip -->
    <section class="py-6 md:py-8 bg-cream">
      <div class="max-w-4xl mx-auto px-4 md:px-6">
        <div class="grid grid-cols-2 gap-3 md:gap-4">
          <div class="aspect-video rounded-xl md:rounded-2xl overflow-hidden shadow-md">
            <img src="/images/exterior-1.jpg" alt="Sip of Joy exterior" class="w-full h-full object-cover" />
          </div>
          <div class="aspect-video rounded-xl md:rounded-2xl overflow-hidden shadow-md">
            <img src="/images/pastries.jpg" alt="handcrafted pastries at Sip of Joy" class="w-full h-full object-cover" />
          </div>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="py-10 md:py-16 bg-warm-white">
      <div class="max-w-4xl mx-auto px-4 md:px-6 text-center">
        <CoffeeCup class="w-16 h-16 text-cinnamon/40 mx-auto mb-6" />
        <p class="handwritten text-2xl text-cinnamon mb-2">Ready for a coffee?</p>
        <h2 class="font-display text-3xl font-bold text-espresso mb-6">We Can't Wait to See You</h2>
        <a
          href="/menu"
          class="inline-block border-2 border-espresso hover:bg-espresso hover:text-cream text-espresso px-8 py-3 rounded-full font-medium transition-colors text-lg"
        >
          View Our Menu
        </a>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
